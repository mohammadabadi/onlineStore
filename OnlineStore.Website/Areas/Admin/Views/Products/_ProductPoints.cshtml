@model List<EditProductPoint>

<script id="EditProductPointTemplate" type="text/template">
    <div class="productPointitem">
        <div class="row">
            <div class="col-md-5">
                <div class="form-group">
                    <input type="text" class="form-control text" placeholder="متن..." value="" />
                </div>
            </div>
            <div class="col-md-5">
                <div class="form-group">
                    <select class="form-control point">
                        <option value="1">نقطه قوت</option>
                        <option value="2">نقطه ضعف</option>
                    </select>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <button data-toggle="button" class="btn btn-xs btn-danger btn-delete">
                        <i class="icon-trash"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</script>

<div class="row editproductPoint">
    <div class="col-md-6">
        <div id="ProductPointsList">
            @foreach (var item in Model)
            {
                <div class="productPointitem" data-id="@item.ID">
                    <div class="row">
                        <div class="col-md-5">
                            <div class="form-group">
                                <input class="form-control text" placeholder="متن..." value="@item.Text" />
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                @Html.EnumDropDownListFor(s=>item.ProductPointType,new { @class= "form-control point" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <button data-toggle="button" class="btn btn-xs btn-danger btn-delete">
                                    <i class="icon-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <hr />
        <div class="row">
            <div class="col-md-4 col-md-offset-8 text-left">
                <button id="AddProductPoint" class="btn btn-xs btn-success" type="button" data-toggle="button">
                    <i class="icon-plus-sign"></i>
                </button>
            </div>
        </div>
    </div>
</div>
