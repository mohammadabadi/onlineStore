@model List<EditProductPricesLink>

<script id="EditProductLinkTemplate" type="text/template">
    <div class="productLinkitem">
        <div class="row">
            <div class="col-md-5">
                <div class="form-group">
                    <input type="text" class="form-control link" placeholder="لینک..." value="" />
                </div>
            </div>
            <div class="col-md-5">
                <div class="form-group">
                    <select class="form-control website">
                        <option value="0">DigiKala</option>
                        <option value="1">Bamilo</option>
                    </select>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <button data-toggle="button" class="btn btn-xs btn-danger btn-delete">
                        <i class="icon-trash"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</script>

<div class="row editproductLink">
    <div class="col-md-6">
        <div id="ProductLinksList">
            @foreach (var item in Model)
            {
                <div class="productLinkitem" data-id="@item.ID">
                    <div class="row">
                        <div class="col-md-5">
                            <div class="form-group">
                                <input class="form-control link" placeholder="لینک..." value="@item.Link" />
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                @Html.EnumDropDownListFor(s => item.WebsiteName, new { @class = "form-control website" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <button data-toggle="button" class="btn btn-xs btn-danger btn-delete">
                                    <i class="icon-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <hr />
        <div class="row">
            <div class="col-md-4 col-md-offset-8 text-left">
                <button id="AddProductLink" class="btn btn-xs btn-success" type="button" data-toggle="button">
                    <i class="icon-plus-sign"></i>
                </button>
            </div>
        </div>
    </div>
</div>
