@model HomeBox

@{
    ViewBag.Title = "ویرایش باکس محصول";
}

@using (Html.BeginForm("Edit", "HomeBoxes", FormMethod.Post, new { @class = "validate" }))
{
    @Html.AntiForgeryToken()

    <div class="col-sm-6">
        @Html.Partial("_Status")
        <div class="form-group">
            @Html.LabelFor(model => model.Title)
            @Html.TextBoxFor(model => model.Title, new { @class = "form-control required" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.OrderID)
            @Html.TextBoxFor(model => model.OrderID, new { @class = "form-control required number" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.HomeBoxType)
            @Html.EnumDropDownListFor(model => model.HomeBoxType, new { @class = "form-control required" })
        </div>

        <div class="checkbox">
            @Html.CheckBoxFor(model => model.IsVisible)
            @Html.LabelFor(model => model.IsVisible)
        </div>
        <button type="submit" class="btn btn-success">ثبت</button>
        <a href="/Admin/HomeBoxes" class="btn btn-warning">بازگشت</a>
    </div>
}
