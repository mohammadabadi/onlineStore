@model List<EditOrderNote>

<script id="EditOrderNoteTemplate" type="text/template">
    <div class="orderNoteitem">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <textarea class="form-control note" placeholder="کامنت..."></textarea>
                </div>
            </div>
        </div>
    </div>
</script>

<div class="row editorderNote">
    <div class="col-md-6">
        <div id="OrderNotesList">
            @foreach (var item in Model)
            {
                <div class="orderNoteitem note-item" data-id="@item.ID">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <i class="write-date">@Utilities.ToPersianDateString(item.LastUpdate)</i> 
                                <p class="writer"><i class="icon-pencil"></i>@item.Username</p>
                                <p>@item.Note</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <hr />
        <div class="row">
            <div class="col-md-4 col-md-offset-8 text-left">
                <button id="AddOrderNote" class="btn btn-xs btn-success" type="button" data-toggle="button">
                    <i class="icon-plus-sign"></i>
                </button>
            </div>
        </div>
    </div>
</div>
