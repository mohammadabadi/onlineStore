@model ContactUsMessage

@{
    ViewBag.Title = "بررسی پیام ها";
}

@using (Html.BeginForm("Edit", "ContactUs", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="col-sm-6">
        @Html.Partial("_Status")
        <div class="form-group">
            @Html.LabelFor(model => model.FullName):
            <label>@Model.FullName</label>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email):
            <label>@Model.Email</label>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Subject):
            <label>@Model.Subject</label>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Message):
            <hr />
            <label>@Model.Message</label>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Answer)
            @Html.TextAreaFor(model => model.Answer, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ContactUsMessageStatus)
            @Html.EnumDropDownListFor(model => model.ContactUsMessageStatus, new { @class = "form-control required" })
        </div>
        <div class="form-group col-sm-6">
            <label for="SendEmail">ایمیل ارسال شود</label>
            <input type="checkbox" id="SendEmail" name="SendEmail" />
        </div>
        <button type="submit" class="btn btn-success">تایید</button>
        <a href="/Admin/ContactUs" class="btn btn-warning">بازگشت</a>
    </div>
}