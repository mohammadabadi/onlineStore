@model DashboardSettings

@{
    ViewBag.Title = "داشبورد مدیر";
    int i = 0;
}

<div class="row state-overview">
    <div class="col-lg-3 col-sm-6">
        <section class="panel">
            <div class="symbol terques">
                <i class="icon-user"></i>
            </div>
            <div class="value">
                <h1>@Model.SiteUsers</h1>
                <p>کاربر</p>
            </div>
        </section>
    </div>
    <div class="col-lg-3 col-sm-6">
        <section class="panel">
            <div class="symbol red">
                <i class="icon-tags"></i>
            </div>
            <div class="value">
                <h1>@Model.Orders</h1>
                <p>فروش</p>
            </div>
        </section>
    </div>
    <div class="col-lg-3 col-sm-6">
        <section class="panel">
            <div class="symbol yellow">
                <i class="icon-shopping-cart"></i>
            </div>
            <div class="value">
                <h1>@Model.NewOrders</h1>
                <p>سفارش جدید</p>
            </div>
        </section>
    </div>
    <div class="col-lg-3 col-sm-6">
        <section class="panel">
            <div class="symbol blue">
                <i class="icon-bar-chart"></i>
            </div>
            <div class="value">
                <h1>@Model.Profit</h1>
                <p>سود خالص</p>
            </div>
        </section>
    </div>
</div>
<table class="table table-striped table-hover my-tasks">
    <thead>
        <tr>
            <th>ردیف</th>
            <th>عنوان</th>
            <th>شرح</th>
            <th>تاریخ یادآوری</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Tasks)
        {
            i++;
        <tr data-id="@item.ID">
            <td>@i</td>
            <td><a href="@item.Link">@item.Title</a></td>
            <td><a href="@item.Link">@item.Text</a></td>
            <td>@item.PersianUserTaskDate</td>
            <td><a class="icon-check" href="#" title="انجام شد"></a></td>
            <td>
                <a class="icon-calendar btn-settaskdate" href="#" data-mfp-src="#SetTaskDate" title="بروز رسانی پیام"></a>
                <div id="SetTaskDate" class="white-popup mfp-hide">
                    @Html.Partial("_SetTaskDate",item)
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>

@section Styles{
    <link href="/assets/Magnific/magnific-popup.css" rel="stylesheet" />
    <link href="/css/magnific-popup.css" rel="stylesheet" />
    <link href="/css/admin/dashboard.min.css" rel="stylesheet" />
}

@section Scripts{
    <script src="/assets/Magnific/jquery.magnific-popup.min.js"></script>
    <script src="/js/admin/dashboard.js"></script>
}